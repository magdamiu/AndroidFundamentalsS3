<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.myfirstandroidapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fragments.AlertsActivity"></activity>
        <activity
            android:name=".fragments.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".fragments.DisplayFromFragmentActivity" />
        <activity android:name=".fragments.MessageActivity" />
        <activity android:name=".fragments.DynamicFragmentActivity" />
        <activity android:name=".fragments.FragmentsActivity" />
        <activity android:name=".tab_sample.TabsActivity" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_sample.ReceiverActivity" />
        <activity android:name=".activity_sample.LifecycleActivity" />
        <activity android:name=".recycler_view_sample.FruitsActivity" />
        <activity android:name=".activity_sample.FoodActivity" />
        <activity
            android:name=".activity_sample.SecondActivity"
            android:label="@string/title_activity_second"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity_sample.MainActivity" />
    </application>

</manifest>